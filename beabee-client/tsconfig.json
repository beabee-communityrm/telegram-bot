{
  "extends": "@tsconfig/recommended",
  "include": ["./src"],
  "exclude": ["src/**/*.test.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declarationDir": "./dist/types",
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "paths": {
      "@beabee/beabee-common": ["../beabee-common/mod.ts"],
      "@beabee/client": ["."]
    }
  }
}
